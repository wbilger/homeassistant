            apparent_right_pos: 1em
            apparent_right_margin: 1em
            current_data_top_margin: 3em
            large_icon_top_margin: -4em
            large_icon_left_pos: 0em
            separator_top_margin: 0em
            slot_l1: pop
            slot_r1: daytime_high
            # slot_l2: remove
            # slot_r2: remove
            # slot_l3: remove
            # slot_r3: remove
            # slot_l4: remove
            # slot_r4: remove

#################################################################
# VIEW_home                                                     #
#   Header banner - card/column 3 (of 3) - Calendar             #
################################################################# 
          - type: custom:calendar-card
            hideHeader: true
            numberOfDays: 14
            dateTopFormat: "ddd"
            dateBottomFormat: "D"
            timeFormat: "h:mma"
            showMultiDay: true
            highlightToday: true
            startFromToday: true
            showLocation: true
            #showLocationIcon: false
            entities:
              - calendar.ontario_holidays
              - calendar.bilger_family
              - calendar.bilger_work
              - calendar.bilger_wayne
              - calendar.bilger_wayne_slopitch
              - calendar.bilger_wayne_tecumsehs_umpiring
              - calendar.bilger_jenn
              - calendar.bilger_kale
              - calendar.bilger_kale_hockey
              - calendar.bilger_jalynne
              - calendar.bilger_jalynne_hockey
              - calendar.curbside_pickup_garbage_day
              - calendar.curbside_pickup_yard_waste
            style: |
              ha-card {
                height: 255px 
              }
              ha-card {
                overflow: scroll
              }

#################################################################
